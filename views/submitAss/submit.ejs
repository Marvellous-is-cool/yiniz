<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" href="/images/favicon.ico" type="image/x-icon" />
    <title>Submit Assignment</title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <style>
      body {
        font-family: "Be Vietnam Pro", sans-serif;
        background: #f3f4f6;
        display: flex;
        justify-content: center;
        align-items: center;
        height: 100vh;
      }
      .container {
        background: #ffffff;
        padding: 2rem;
        border-radius: 0.5rem;
        box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
      }
      .flash {
        margin-top: 1em;
        text-align: center;
      }
      .flash.error {
        color: red;
      }
      .file-input {
        position: relative;
        width: 100%;
        height: 40px;
        overflow: hidden;
        cursor: pointer;
        display: flex;
        align-items: center;
        justify-content: center;
      }
      .file-input input[type="file"] {
        position: absolute;
        width: 100%;
        height: 100%;
        opacity: 0;
        cursor: pointer;
      }
      .file-input label {
        background-color: #3490dc;
        color: white;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
        display: inline-block;
        text-align: center;
        width: 100%;
      }
      .progress {
        width: 100%;
        background-color: #f3f4f6;
        border-radius: 5px;
        margin-top: 10px;
      }
      .progress-bar {
        height: 20px;
        width: 0;
        background-color: #38c172;
        border-radius: 5px;
        text-align: center;
        color: white;
        line-height: 20px;
      }
      .disabled {
        background-color: #d3d3d3;
        cursor: not-allowed;
      }
    </style>
  </head>
  <body class="bg-gray-100 flex items-center justify-center h-screen">
    <div class="container w-full max-w-md animated fadeIn">
      <h3 class="text-center mb-4">Welcome <%= username %></h3>
      <h1 class="text-2xl font-bold text-center mb-6">Submit Assignment</h1>

      <!-- Flash messages -->
      <% let errors = errorMessage || []; %> <% let successes = successMessage
      || []; %> <% if (errors.length > 0) { %>
      <div class="flash error bg-red-100 text-red-800 py-2 px-4 rounded">
        <%= errors[0] %>
      </div>
      <% } %> <% if (successes.length > 0) { %>
      <div class="flash success bg-green-100 text-green-800 py-2 px-4 rounded">
        <%= successes[0] %>
      </div>
      <% } %>

      <form
        id="submitForm"
        action="/yap/submit"
        method="post"
        enctype="multipart/form-data"
        class="bg-white shadow-md rounded px-8 pt-6 pb-8 mb-4"
      >
        <div class="mb-4">
          <label
            class="block text-gray-700 text-sm font-bold mb-2"
            for="student_name"
            >Student Name:</label
          >
          <input
            type="text"
            id="student_name"
            name="student_name"
            required
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          />
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="level"
            >Level:</label
          >
          <select
            id="level"
            name="level"
            required
            class="shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline"
          >
            <option value="">Select...</option>
            <option value="100">100</option>
            <option value="200">200</option>
            <option value="300">300</option>
            <option value="400">400</option>
          </select>
        </div>
        <div class="mb-4">
          <label class="block text-gray-700 text-sm font-bold mb-2" for="file"
            >Upload PDF/DOC:</label
          >
          <div class="file-input">
            <input
              type="file"
              id="file"
              name="file"
              accept="application/pdf, application/msword, application/vnd.openxmlformats-officedocument.wordprocessingml.document"
              required
            />
            <label for="file">Choose File</label>
          </div>
          <div class="file-name mt-2 text-gray-700"></div>
          <div class="progress">
            <div
              class="progress-bar"
              role="progressbar"
              aria-valuenow="0"
              aria-valuemin="0"
              aria-valuemax="100"
            >
              0%
            </div>
          </div>
          <p class="upload-appear text-danger-700 text-sm mt-4 text-center"></p>
        </div>
        <div class="flex items-center justify-between">
          <button
            id="submitButton"
            type="button"
            class="bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline"
          >
            Submit
          </button>
        </div>
      </form>

      <p class="text-danger-700 text-sm mt-4 text-center">
        You will be redirected to the success page upon successful submission.
        Only PDF or DOC files are allowed. If you attempt to submit any other
        file, you will be notified.
      </p>
    </div>

    <script>
      document
        .getElementById("submitButton")
        .addEventListener("click", function (event) {
          event.preventDefault();

          const form = document.getElementById("submitForm");
          const formData = new FormData(form);
          const xhr = new XMLHttpRequest();

          xhr.open("POST", "/yap/submit", true);

          xhr.upload.onprogress = function (event) {
            if (event.lengthComputable) {
              const percentComplete = (event.loaded / event.total) * 100;
              const progressBar = document.querySelector(".progress-bar");
              progressBar.style.width = percentComplete + "%";
              progressBar.textContent = Math.round(percentComplete) + "%";
              progressBar.setAttribute("aria-valuenow", percentComplete);
              document.querySelector(".upload-appear").textContent =
                "Kindly wait for the file to be uploaded (upload speed will be determined by your network)";
            }
          };

          xhr.onload = function () {
            if (xhr.status === 200) {
              window.location.href = "/yap/success";
            } else {
              alert("Error uploading file: " + xhr.responseText);
            }
          };

          xhr.send(formData);
        });

      document
        .getElementById("file")
        .addEventListener("change", function (event) {
          const fileInput = document.getElementById("file");
          const file = fileInput.files[0];
          const allowedTypes = [
            "application/pdf",
            "application/msword",
            "application/vnd.openxmlformats-officedocument.wordprocessingml.document",
          ];

          if (!allowedTypes.includes(file.type)) {
            alert("This file format is not allowed. Only PDF/DOC is allowed.");
          } else {
            document.querySelector(
              ".file-name"
            ).textContent = `Selected file: ${file.name}`;
          }
        });
    </script>
  </body>
</html>
