# =================================
# YINIZ PROJECT - ENVIRONMENT VARIABLES TEMPLATE
# =================================
# Copy this file to .env and fill in your actual values

# =================================
# DATABASE CONFIGURATION (Required)
# =================================
MYSQL_HOST=your_mysql_host
MYSQL_USER=your_mysql_username
MYSQL_PASSWORD=your_mysql_password
MYSQL_DATABASE=yiniz_db
MYSQL_PORT=3306

# =================================
# APPLICATION CONFIGURATION
# =================================
PORT=3000
NODE_ENV=development

# =================================
# SESSION & SECURITY (Required)
# =================================
SESSION_SECRET=generate-a-random-32-character-string-here

# =================================
# EMAIL CONFIGURATION (Optional)
# =================================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password

# =================================
# ADMIN CREDENTIALS (Optional - for testing)
# =================================
ADMIN_USERNAME=Admin
ADMIN_PASSWORD=YourAdminPassword

# =================================
# EXTERNAL SERVICES (Optional)
# =================================
ADSENSE_CLIENT_ID=your-adsense-client-id
